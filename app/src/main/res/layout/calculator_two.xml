<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_gravity="right"
        android:id="@+id/textView"
        android:textSize="40dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

          <Button
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
            android:text="DELETE"
            android:id="@+id/button2"
            android:layout_gravity="right"
              />
    </LinearLayout>
    <TableLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
            android:id="@+id/but7"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_span="4"
            android:layout_weight="1"
            android:text="7" />

            <Button
                android:id="@+id/but8"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="8" />
            <Button
                android:id="@+id/but9"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="9" />
            <Button
                android:id="@+id/but_devide"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="\u00F7"/>

        </LinearLayout>
    </TableLayout>




    <!-- line two 4,5,6,* -->
    <TableLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/but4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:id="@+id/but5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="5" />
            <Button
                android:id="@+id/but6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="6" />
            <Button
                android:id="@+id/button_multiplication"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="\u00D7"/>

        </LinearLayout>
    </TableLayout>


    <!-- line three 1,2,3,- -->
    <TableLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/but1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/but2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="2" />
            <Button
                android:id="@+id/but3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="3" />
            <Button
                android:id="@+id/button_minus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="\u2212"/>

        </LinearLayout>
    </TableLayout>
    <!-- line four .,0,=,+ -->
    <TableLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/button_dot"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="\u00B7" />

            <Button
                android:id="@+id/but0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="0" />
            <Button
                android:id="@+id/button_equal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="\u003D" />
            <Button
                android:id="@+id/button_plus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_span="4"
                android:layout_weight="1"
                android:text="\u002B"/>

        </LinearLayout>
    </TableLayout>
</TableLayout>